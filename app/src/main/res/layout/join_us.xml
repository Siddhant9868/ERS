<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:fillViewport="false">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:background="#70ffffff"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/join_us_text1"
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:padding="40dp"
        android:gravity="center"
        android:background="@drawable/circle1"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        android:text="hello" />

    <TextView
        android:id="@+id/or1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/join_us_text1"
        android:layout_alignRight="@+id/join_us_text1"
        android:layout_below="@+id/join_us_text1"
        android:gravity="center"
        android:hint="or"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/join_us_text2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_below="@+id/or1"
        android:text="hello" />

    <TextView
        android:id="@+id/or2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/join_us_text2"
        android:layout_alignRight="@+id/join_us_text2"
        android:layout_below="@+id/join_us_text2"
        android:gravity="center_horizontal"
        android:hint="or"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/join_us_text3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="@drawable/circle3"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_below="@+id/or2"
        android:text="hello" />

    <TextView
        android:id="@+id/or3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/join_us_text3"
        android:layout_alignRight="@+id/join_us_text3"
        android:layout_below="@+id/join_us_text3"
        android:gravity="center_horizontal"
        android:hint="or"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/join_us_text4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="@drawable/circle4"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_below="@+id/or3"
        android:hint="hello" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_us_text4"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:onClick="join_us"
        android:padding="25dp"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/join_us_text4"
        android:layout_alignStart="@+id/join_us_text4"
        android:background="#ffffff"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#003444"
        android:text="Let's Talk." />

</RelativeLayout>
</ScrollView>
